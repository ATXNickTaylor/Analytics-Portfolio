def transform_string(sentence):
    def transform_character(previous, current):
        if previous.lower() < current.lower():
            return current.upper()
        else:
            return current.lower()

    result = []
    for word in sentence.split():
        new_word = [word[0]]  # Keep the first character as is
        for i in range(1, len(word)):
            new_word.append(transform_character(word[i-1], word[i]))
        result.append(''.join(new_word))

    return ' '.join(result)

# Example for the submission
input_sentence = "coOL dog"
output_sentence = transform_string(input_sentence)
print(output_sentence)
